<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @report.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_report_path(@report.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', report_path(@report.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @report.report %></p>
    <span class="name"><%= @report.title %>
    </span>
  </div>
</div>